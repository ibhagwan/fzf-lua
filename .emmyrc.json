{
  "$schema": "https://raw.githubusercontent.com/EmmyLuaLs/emmylua-analyzer-rust/refs/heads/main/crates/emmylua_code_analysis/resources/schema.json",
  "runtime": {
    "version": "LuaJIT",
    "requirePattern": [
      "lua/?.lua",
      "lua/?/init.lua"
    ]
  },
  "diagnostics": {
    "enable": true,
    "disable": [
      "unnecessary-if",
      "param-type-not-match",
      "type-not-found",
      "preferred-local-alias",
      "need-check-nil",
      "undefined-field",
      "assign-type-mismatch",
      "inject-field",
      "redundant-return-value",
      "unnecessary-assert",
      "return-type-mismatch",
      "generic-constraint-mismatch",
      "await-in-sync",
      "redundant-parameter",
      "missing-fields",
      "missing-return-value",
      "cast-type-mismatch",
      "missing-parameter",
      "access-invisible",
      "global-in-non-module",
      "duplicate-require",
      "unused"
    ]
  },
  "workspace": {
    "library": [
      "$VIMRUNTIME",
      "${3rd}/luv/library",
      "deps/mini.nvim",
      "deps/nvim-web-devicons",
      "deps/nvim-cmp",
      "deps/nvim-dap",
      "$XDG_DATA_HOME/nvim/lazy/mini.nvim",
      "$XDG_DATA_HOME/nvim/lazy/nvim-web-devicons",
      "$XDG_DATA_HOME/nvim/lazy/nvim-cmp",
      "$XDG_DATA_HOME/nvim/lazy/nvim-dap"
    ],
    "preloadFileSize": 1000
  },
  "hint": {
    "enable": true
  }
}
